extends layouts/layout

block content
  div(class='container mt-3' style='min-height: 50em')
    div(class='border rounded  mt-2' id='form-border')
      form(action='/api/movies', method="post", enctype='multipart/form-data')
        div(class='col-2 offset-md-1')
            h3 Reg Movie:
        div(class='form-group row')
          label(class='col-sm-2 offset-md-1 col-form-label') Name
          div(class='col-sm-8')
            input(type='text', class='form-control', Placeholder='Movie name', name='name')
        div(class='form-group row')
          label(class='col-sm-2 offset-md-1 col-form-label') Movie
          div(class='col-sm-8')
            input(type='file', class='form-control-file', id='movie', name='movie')
        div(class='form-group row')
          label(class='col-sm-2 offset-md-1 col-form-label') Genre
          .col-sm-8
            select(name='genre' class='form-control')
              option(value='', disabled='disabled', selected='selected') Select genre
              option(value='acción') Acción
              option(value='animadas') Animadas
              option(value='comedia') Comedia
              option(value='drama') Drama
              option(value='Fantasia') Fantasía
              option(value='ficción') Ficción
        div(class='form-group row')
          label(class='col-sm-2 offset-md-1 col-form-label') Subs
          .col-sm-8
            input(type='file', class='form-control-file', Placeholder='subs Route', name='subs')
        div(class='form-group row')
          label(class='col-sm-2 offset-md-1 col-form-label') Thumbnail
          .col-sm-8
            input(type='file', class='form-control-file', Placeholder='img Route', name='thumbnail')
        div(class='form-group row')
          div(class='col-sm-8 offset-md-3')
            Button(type='submit' class='btn btn-danger btn-block mt-3', ) Save