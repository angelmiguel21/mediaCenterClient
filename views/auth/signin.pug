doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/plugins/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/login.css')
  body
    div.preloader
      svg(class='circular', viewbox='25 25 50 50')
        circle(class='path', cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10")
    div(class='main-wrapper', style='background: url("/images/bg_login.jpg"); background-size: 1600px 900px; height: 100vh;')
      div.unix-login
        div.container-fluid
          div.row
            div(class='col-lg-4 offset-lg-1')
              div(class='login-content', style='margin-top:120px')
                div.login-form
                  h4 Sign-In
                  form(method='POST', action='/users/signin')
                    div(class='form-group')
                      label Email
                      input(id='email', type='email', class='form-control', name='email', value='', required ,autofocus)
                    div(class='form-group')
                      label Password
                      input(id='password', type='password', class='form-control', name='password' required)
                      if signinMessage
                        div= signinMessage
                    button(type='submit', class='btn btn-info btn-flat m-b-30 m-t-30') Login
    // jquery
    script(src='/plugins/jquery/dist/jquery.js')
    // bootstrap
    script(src='/plugins/popper.js/dist/esm/popper.js')
    script(src='/plugins/bootstrap/dist/js/bootstrap.js')
    // custom
    script(src='/javascripts/custom.js')